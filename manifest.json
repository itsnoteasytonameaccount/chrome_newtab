{
    "manifest_version": 2,
    "name": "new tab",
    "description": "新标签页替换页",
    "version": "1.0",
    "permissions": [
        // "tabs",
        "bookmarks",
        // "management",
        // "wallpaper",
        "contextMenus",
        "search",
        "storage",
        // "history",
        "chrome://favicon/"
    ],
    "browser_action": {
        "default_icon": "assets/favo.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "assets/favo.png"
    },
    "chrome_url_overrides": {
        "newtab": "index.min.html"
    },
    "background": {
        "scripts": [
            "scripts/background.min.js"
        ],
        "persistent": false
    }
}